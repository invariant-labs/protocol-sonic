    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
